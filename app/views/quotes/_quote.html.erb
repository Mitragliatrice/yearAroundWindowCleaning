<div class="request">
    <div class="row">
    <div class="col-md-2">
        </div>
        <div class="col-md-3">
            <h3 class="request-title"><%= link_to quote.name, quote %></h3>
            <p class="request_field" id="small"><%= quote.phone %></p>
            <p class="request_field" id="small"><%= quote.email %></p>
            <p class="request_field" id="small"><%= quote.city %></p>
        </div>

        <div class="col-md-5">
            <p class="blog-post-meta">
            <%= quote.body %>
            </p>
        </div>
        <div class="col-md-2">
        </div>
    </div>



    <div class="row">
    <div class="col-md-2">
        </div>
     <% if logged_in?(:site_admin) %>
        <div class="col-md-3"><p class="request-meta">
            <%= link_to 'Edit Request', edit_quote_path(quote), class: 'request-meta' %>/
            <%= link_to 'Delete Request', quote, method: :delete, data: { confirm: 'Are you sure? Double check!' }, class: 'request-meta'%></p></div>
        <div class="col-md-5"><p class="request-meta">Requested <%= distance_of_time_in_words(quote.created_at, Time.now) %> ago.</p></div>
        <div class="col-md-2">
        </div>
     <% end %>

    </div>
    <hr>
</div>